<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/countdown_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/countdown_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/countdown_name" />

    <ProgressBar
        android:id="@+id/countdown_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/countdown_date" />

    <ImageView
        android:id="@+id/countdown_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/countdown_progress"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/delete_button_description"
        android:src="@drawable/ic_baseline_delete_outline_24" />
</RelativeLayout>